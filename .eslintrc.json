{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": ["eslint:recommended", "plugin:jest/recommended"],
    "plugins": ["jest"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double",
            { "avoidEscape": true }
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "page": false,
        "validateHTMLcurrentPage": false,
        "validateCSScurrentPage": false,
        "compareImage": false,
        "getInnerText": false,
        "getCSSPropertyValues": false,
        "getAttribute": false,
        "hash": false,
        "Chartist": false,
        "removeSandboxButton": false,
        "setSandboxCookie": false
    }

}